<h3 class="text-center m-3">List OF Students</h3>

<table class="table table-responsive table-striped table-bordered">
    <thead class="thead-light">
        <th>ID</th>
        <th>FIRST NAME</th>
        <th>MIDDLE NAME</th>
        <th>LAST NAME</th>
        <th>DATE OF BIRTH</th>
        <th>SEX</th>
        <th>AGE</th>
        <th>CLASS</th>
        <th>ADDRESS</th>
        <th>PHONE NUMBER</th>
        <th>DATE ADMITTED</th>
        <th colspan="2">ACTION</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{firstname}}</td>
            <td>{{middlename}}</td>
            <td>{{lastname}}</td>
            <td>{{dateofbirth}}</td>
            <td>{{sex}}</td>
            <td>{{age}}</td>
            <td>{{currentclass}}</td>
            <td>{{address}}</td>
            <td>{{phoneno}}</td>
            <td>{{admissiondate}}</td>
            <td> <a class="btn btn-sm btn-warning" href="/students/edit/{{ID}}">EDIT</a></td>
            <td><a class="btn btn-sm btn-danger" href="/students/delete/{{ID}}">DELETE</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>