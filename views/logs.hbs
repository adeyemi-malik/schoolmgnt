<h3 class="text-center">Audit Logs</h3>

<table class="table table-responsive table-striped table-bordered">
    <thead>
        <th>ID</th>
        <th>ACTION</th>
        <th>DETAIL</th>
        <th>PERFORMED BY</th>
        <th>DATE PERFORMED</th>
        <th colspan='1'>ACTION</th>


    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{action}}</td>
            <td>{{detail}}</td>
            <td>{{performedby}}</td>
            <td>{{date_performed}}</td>
            <td><a class="btn btn-sm btn-danger" href="/roles/delete/{{ID}}">DELETE</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>