<div class="container mt-5">
    <h3 class="text-center">Role Assignment</h3>
    <table class="table  table-striped table-bordered table-dark table-responsive-sm table-hover mt-3">
        <thead>
            <th>ID</th>
            <th>USER ID</th>
            <th>ROLE ID</th>
            <th colspan="1">ACTION</th>
        </thead>
        {{#each data}}
        <tbody id="usertable">
            <tr>
                <td>{{ID}}</td>
                <td>{{user_id}}</td>
                <td>{{role_id}}</td>

                <td> <a class="btn btn-sm btn-danger" href="/deleteuserrole/{{ID}}">DELETE</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
