<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="" action="/roles/edit">
        <fieldset>

            <!-- Form Name -->
            <legend>
                <center>
                    <h2><b>Edit role</b></h2>
                </center>
            </legend><br>
            <input type="hidden" name='ID' value="{{ID}}">
            <!-- Text input-->

            <div class="form-group">
                <label class="col-md-4 control-label">ROLE NAME</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="title" value="{{title}}" placeholder="category Name" value="" class="form-control"
                            type="text">
                    </div>
                </div>
            </div>

            <!-- Select Basic -->

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="success_message">Success <i
                    class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4"><br>
                    <button type="submit" class="btn btn-warning">SUBMIT <span
                            class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
</div><!-- /.container -->